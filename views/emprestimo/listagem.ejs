<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Empréstimos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin-top: 50px;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #e9ecef;
            color: #495057;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .btn {
            padding: 8px 15px;
            font-size: 14px;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }

        .alert {
            margin-bottom: 20px;
        }

        .btn-close {
            background-color: transparent;
        }
    </style>
</head>
<body>

    <%- include("../partials/cabecalho.ejs") %>

    <div class="container">
        
        <% if(status == "1") {%>
            <div class="alert alert-success alert-dismissible">
                <button class="btn-close" data-bs-dismiss="alert"></button>
                Cadastrado com <b>sucesso!</b>
            </div>
        <% } %>
        <% if(status == "2") {%>
            <div class="alert alert-danger alert-dismissible">
                <button class="btn-close" data-bs-dismiss="alert"></button>
                Removido com <b>sucesso!</b>
            </div>
        <% } %>
        <% if(status == "3") {%>
            <div class="alert alert-warning alert-dismissible">
                <button class="btn-close" data-bs-dismiss="alert"></button>
                Atualizado com <b>sucesso!</b>
            </div>
        <% } %>

        <h1>Listagem de Empréstimos</h1>

        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Detalhar</th>
                    <th>Excluir</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                <% emprestimos.forEach(emprestimo => { %>
                    <tr>
                        <td><%= emprestimo.id %></td>
                        <td><%= emprestimo.nome %></td>
                        <td><%= emprestimo.valor %></td>
                        <td>
                            <a href="/emprestimos/<%= emprestimo.id %>">
                                <button type="button" class="btn btn-info">Detalhar</button>
                            </a>
                        </td>
                        <td>
                            <a href="/emprestimos/remover/<%= emprestimo.id %>">
                                <button onclick="return confirm('Deseja realmente excluir?')" type="button" class="btn btn-danger">Excluir</button>
                            </a>
                        </td>
                        <td>
                            <a href="/emprestimos/cadastrar/<%= emprestimo.id %>">
                                <button type="button" class="btn btn-warning">Editar</button>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include("../partials/rodape.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
